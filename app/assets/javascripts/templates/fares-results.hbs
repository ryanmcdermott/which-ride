{{#each fare in controller}}
  <div class="col-md-6 fares-results">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="text-center">
          <img src="{{unbound fare.image}}" style="height: 100px;"/>
        </h4>
      </div>
      <div class="panel-body text-center">
        <p class="lead">
          <strong>{{fare.price}}</strong>
        </p>
      </div>
      <!-- TODO: Add Cancellation Fee info and other useful information
        <ul class="list-group list-group-flush text-center">
          <li class="list-group-item"><i class="icon-ok text-danger"></i></li>
        </ul>
      -->
      <div class="panel-footer">
        <a class="btn btn-lg btn-block btn-default" href="http://www.retailmenot.com/view/{{unbound fare.company}}.com">GET A PROMO CODE!
        </a>
      </div>
    </div>
  </div>
{{/each}}